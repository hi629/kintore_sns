<h2>パスワードを忘れましたか？</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email", class:"formInput" }, label:false, placeholder:"登録したメールアドレスを入力してください。" %>
  </div>

  <p style="margin:0;">以下、未実装です。</p>
  <div class="form-actions">
    <%= f.button :submit, "パスワードリセットメールを送る", class:"formButton" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
