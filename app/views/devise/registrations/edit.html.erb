<div class="formWrap container">
<h2>プロフィール編集</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div>
    <span>アバター設定</span>
  <% if current_user.avatar.url.present? %>
    <div class="profileEditAvatarWrap">
    <%= image_tag(current_user.avatar.url, class:"profileEditAvatar") %>
    </div>
  <% end %>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
  </div>
  <br>

  <%= f.input :email, required: true, autofocus: true , input_html: { autocomplete: "email", class:"formInput" }, placeholder:"Eメール", label:false %>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
  <% end %>
  
  <%= f.input :name, required: true, autofocus: true , input_html: { class:"formInput" }, placeholder:"名前", label:false %>
  <%= f.input :username, required: true, autofocus: true , input_html: { class:"formInput" }, placeholder:"ユーザーID", label:false %>
  <%= f.input :password, required: true, input_html: { autocomplete: "new-password", class:"formInput" }, label:false, placeholder:"6文字以上のパスワード" %>
  <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password", class:"formInput" }, label:false, placeholder:"パスワードの確認" %>

  <%= f.text_area :introduce, placeholder:"自己紹介しましょう。筋トレ歴、10キロ痩せるぞ！！などなど...", class:"profileEditText" %>

  <div class="form-actions">
    <%= f.button :submit, "更新", class:"formButton" %>
  </div>
<% end %>

<p><%= link_to "アカウント削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "戻る", :back %>

</div>
