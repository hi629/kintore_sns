<div class="formWrap">
  <h2>ログインする</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email", class:"formInput" }, label:false, placeholder:"Eメール" %>
      <%= f.input :password, required: false, input_html: { autocomplete: "current-password", class:"formInput" }, label:false, placeholder:"パスワード" %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "ログイン", class:"formButton" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>