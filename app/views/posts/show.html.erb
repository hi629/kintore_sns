<div class="postCard">
    <div class="cardHeader">
        <div class="cardHeaderLeft">
            <div class="profileImage">
                <% if  @user.avatar.present? %>
                    <%= link_to @user do %>
                    <%= image_tag @user.avatar.url, class:"profileAvatar" %>
                    <% end %>
                <% else %>
                    <%= link_to @user do %>
                    <i class="fas fa-user"></i>
                    <% end %>
                <% end %>
            </div>
            <div class="postCardName"><%= @user.name %></div>
        </div>
        <div class="cardHeaderRight">
            <% unless current_user?(@user) %>
            <div id="follow_form">
            <% if current_user.following?(@user) %>
                <%= render 'users/unfollow' %>
            <% else %>
                <%= render 'users/follow' %>
            <% end %>
            </div>
            <% end %>        
            <% if user_signed_in? && @post.user.id == current_user.id %>
                <%= link_to @post, method: :delete, data:{ confirm: "本当に消しますか？"}  do %>
                    <span class="icon">投稿を消す</span>
                <% end %>
            <% end %>                
        </div>
    </div>
    <div class="cardImageWrap"><%= image_tag(@post.image.url, class:"cardImage") %></div>
    <div class="cardBottom">
        <%= @post.text %>
    </div>
</div>